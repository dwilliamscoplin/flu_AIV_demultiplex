    min_qscore = 0 // Default minimum Q-score
    barcode_both_ends = false
    emit_fastq = True // No default, must be specified
    input_dir = "${C:\Users\Dawn.WilliamsCoplin\OneDrive - USDA\Minion work\work for Iryna's paper\ONT_20250131\20250131_1705_MC-115354_FAZ88725_58379494\fastq_pass}/data" // Default input directory
